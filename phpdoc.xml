<?xml version="1.0" encoding="UTF-8" ?>
<phpdocumentor
    configVersion="3"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://www.phpdoc.org"
    xsi:schemaLocation="https://www.phpdoc.org https://raw.githubusercontent.com/phpDocumentor/phpDocumentor/master/data/xsd/phpdoc.xsd"
>
    <title>Alerts in UA PHP Library Documentation</title>
    
    <use-cache>true</use-cache>
    
    <paths>
        <output>docs</output>
        <cache>cache</cache>
    </paths>
    
    <versions>
        <api>
            <source dsn=".">
                <path>src</path>
            </source>
            <output>docs</output>
            <ignore>
                <path>tests</path>
                <path>vendor</path>
                <path>*.md</path>
                <path>*.txt</path>
                <path>*.json</path>
                <path>*.xml</path>
                <path>*.yml</path>
                <path>*.yaml</path>
            </ignore>
            <extensions>
                <extension>php</extension>
            </extensions>
            <visibility>public</visibility>
            <visibility>protected</visibility>
            <default-package-name>AlertsInUa</default-package-name>
        </api>
    </versions>
    
    <settings>
        <setting name="graphs.enabled" value="true"/>
        <setting name="graphs.format" value="svg"/>
    </settings>
    
    <templates>
        <template name="clean"/>
    </templates>
</phpdocumentor>
